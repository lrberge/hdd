{
	"version": "2.0.0",
	"tasks": [
		{
      // source: 
      "label": "Create terminals",
      "dependsOn": [
        "git bash",
        "R-term"
      ],
      // Mark as the default build task so cmd/ctrl+shift+b will create them
      "group": {
        "kind": "build",
        "isDefault": true
      },
      // Try start the task on folder open
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      // The name that shows up in terminal tab
      "label": "git bash",
      // The task will launch a shell
      "type": "shell",
      "command": "",
      // Set the shell type
      "options": {
        "shell": {
          "executable": "sh.exe",
          "args": ["--login"]
        }
      },
      // Mark as a background task to avoid the spinner animation on the terminal tab
      "isBackground": true,
      "problemMatcher": [],
      // Create the tasks in a terminal group
      "presentation": {
        "echo": false,
        "group": "my-group"
      }
    },
    {
      "label": "R-term",
      "type": "shell",
      "command": "",
      "options": {
        "shell": {
          "executable": "radian.exe",
          "args": ["--no-save", "no-restore"]
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "group": "my-group"
      }
    }
	]
}